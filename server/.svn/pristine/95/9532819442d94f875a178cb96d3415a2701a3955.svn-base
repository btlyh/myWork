package com.cambrian.dfhm.skill;

import java.util.ArrayList;
import com.cambrian.dfhm.battle.BattleCard;
import com.cambrian.dfhm.battle.BattleRecord;

/**
 * 类说明：免伤
 * @author：Sebastian
 * 
 */
public class NoHurtSkill extends Skill{

	/* static fields */

	/* static methods */

	/* fields */
	/** 免伤次数 */
	private int number;
	
	/* constructors */

	/* properties */
	public int getNumber()
	{
		return number;
	}

	/* init start */

	/* methods */
	public boolean isNoHurt()
	{
		return number > 0;
	}
	
	@Override
	public ArrayList<Integer> skillValue(BattleCard attCard, ArrayList<Integer> aim, BattleCard[] aimList, BattleRecord record) {
		super.clearDieIndex();
		number --;
		record.addRecord(attCard.getIndex());
		record.addRecord(0);
		record.addRecord(-1);
		record.addRecord(-1);//不掉东西
		return super.getDieIndex();
	}
}

package com.cambrian.dfhm.skill;

import java.util.ArrayList;

import com.cambrian.dfhm.battle.BattleCard;

/**
 * 类说明：中毒技能
 * @author：Sebastian
 * 
 */
public class PoisonSkill extends Skill{

	/* static fields */

	/* static methods */

	/* fields */
	/** 每次中毒扣血数 */
	private int hurt;
	private int round;

	/* constructors */

	/* properties */

	/* init start */

	/* methods */
	@Override
	public ArrayList<Integer> skillValue(BattleCard attCard, int[] aim, BattleCard[] aimList, ArrayList<Integer> record) {
		super.clearDieIndex();
		int hp = super.getSkillHurt(attCard);
		BattleCard aimCard;
		boolean die = false;
		for (int i = 0; i < aim.length; i++) {
			aimCard = aimList[aim[i]];
			die = aimCard.decrHp(hp);
			record.add(aimCard.getIndex());
			record.add(hp);
			if(die)
			{
				record.add(1);
				super.addDieIndex(aimCard.getIndex());
			}
			else
				record.add(-1);
			System.err.println("中毒技能，照成伤害对象==="+aimCard.getName()+", 血量损失 ==="+hp+", 剩余血量 ==="+aimCard.getCurHp());
		}			
		hurt = attCard.getAtt() * super.getAtt() / 1000;
		return super.getDieIndex();
	}

	@Override
	public boolean buffValue(BattleCard aimCard) {
		if(round > 0)
		{
			aimCard.decrHp(hurt);
			round --;
			System.err.println("中毒状态，照成伤害对象==="+aimCard.getName()+", 血量损失 ==="+hurt+", 剩余血量 ==="+aimCard.getCurHp()+"， 剩余回合数 ==="+round);
			return aimCard.getCurHp() > 0;
		}		
		return false;
	}
}

	/**
	 * 获得境界突破限制
	 * @param level	需求等级
	 * @return	限制[卡牌id,卡牌id,卡牌id,卡牌id,卡牌id,奖励培养次数]
	 */
	public int[] getRealmByLevel()
	{
		int[] limit = new int[6];
		for (int i = 0; i < realmLimit.length; i+=7) {
			if(realmLimit[i] == level)
			{
				for (int j = 0; j < limit.length; j++) {
					limit[j] = realmLimit[i + j + 1];
				}
				break;
			}
		}
		return limit;
	}
	

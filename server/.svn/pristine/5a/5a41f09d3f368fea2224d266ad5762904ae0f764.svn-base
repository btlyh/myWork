	@Override
	public boolean skillValue(BattleCard attCard, int[] aim, BattleCard[] aimList, ArrayList<Integer> record)
	{
		int hurt = super.getSkillHurt(attCard);
		BattleCard aimCard;
		boolean die = false;
		for (int i = 0; i < aim.length; i++) {
			aimCard = aimList[aim[i]];
			die = aimCard.decrHp(hurt);
			record.add(aimCard.getIndex());
			record.add(hurt);
			if(die)
				record.add(1);
			else
				record.add(-1);
			System.err.println("普通技能，照成伤害对象==="+aimCard.getName()+"血量损失 ==="+hurt+", 剩余血量 ==="+aimCard.getCurHp());
		}			
		return die;
	}
	
	@Override
	public boolean buffValue(BattleCard aimCard) {
		return false;
	}
}

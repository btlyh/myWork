package com.cambrian.dfhm.skill;

import java.util.ArrayList;

import com.cambrian.dfhm.battle.BattleCard;

/**
 * 类说明：减伤
 * @author：Sebastian
 * 
 */
public class DecrHurtSkill extends Skill{

	/* static fields */

	/* static methods */

	/* fields */
	/** 减少伤害百分比 */
	private int hurt;
	/** 回合数 */
	private int round;

	/* constructors */

	/* properties */

	/* init start */

	/* methods */
	private int decrHurt(BattleCard attCard)
	{
		int value = 0;
		if(round > 0)
		{
			value = attCard.getAtt() - attCard.getAtt() * hurt / 100;
		}
		return value;
	}
	
	@Override
	public ArrayList<Integer> skillValue(BattleCard attCard, int[] aim, BattleCard[] aimList, ArrayList<Integer> record) {
		super.clearDieIndex();
		int value = decrHurt(attCard);
		BattleCard aimCard;
		boolean die = false;
		for (int i = 0; i < aim.length; i++) {
			aimCard = aimList[aim[i]];
			die = aimCard.decrHp(value);
			record.add(aimCard.getIndex());
			record.add(value);
			if(die)
			{
				record.add(1);
				super.addDieIndex(aimCard.getIndex());
			}
			else
				record.add(-1);
			System.err.println("减伤技能，照成伤害对象==="+aimCard.getName()+"血量损失 ==="+value+", 剩余血量 ==="+aimCard.getCurHp());
		}
		return super.getDieIndex();
	}
	
	@Override
	public boolean buffValue(BattleCard aimCard) {
		if(round > 0)
			round --;
		return false;
	}

}

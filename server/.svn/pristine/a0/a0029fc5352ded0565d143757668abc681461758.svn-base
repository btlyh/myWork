 */
public class MatchStartCommand extends Command
{

	@Override
	public void handle(NioTcpConnect connect,ByteBuffer data)
	{
		Session session = connect.getSession();
		if(log.isDebugEnabled())
			log.debug("session = "+session);
		if(session == null) throw new DataAccessException(601, Lang.F9000_SDE);
		Player player = (Player)session.getSource();
		if(player == null) throw new DataAccessException(601, Lang.F9000_SDE);
		int thearerId = data.readInt();
		int stageId = data.readInt();
		int formationIndex = data.readInt();
		int type = data.readInt();
		System.err.println("thearerId ==="+thearerId);
		System.err.println("stageId ==="+stageId);
		System.err.println("formationIndex ==="+formationIndex);
		System.err.println("type ==="+type);
		data.clear();
		ArrayList<Integer> record = BattleManager.getInstance().challengeStage(player, thearerId, stageId, formationIndex, type);
		for (Integer integer : record) {
			data.writeInt(integer);
		}
	}

}

package com.cambrian.dfhm.skill;

import java.util.ArrayList;

import com.cambrian.dfhm.battle.BattleCard;
import com.cambrian.dfhm.battle.BattleRecord;

/**
 * 类说明：晕眩技能
 * @author：Sebastian
 * 
 */
public class DizzySkill extends Skill{

	/* static fields */

	/* static methods */

	/* fields */
	private int round;		

	/* constructors */

	/* properties */

	/* init start */

	/* methods */
	@Override
	public ArrayList<Integer> skillValue(BattleCard attCard, ArrayList<Integer> aim, BattleCard[] aimList, BattleRecord record) {
		super.clearDieIndex();
		int hp = super.getSkillHurt(attCard.getAtt());
		record.setAttMax(hp);
		BattleCard aimCard;
		boolean die = false;
		int index;
		for (int i = 0; i < aim.size(); i++) {
			index = aim.get(i);
			aimCard = aimList[index];
			die = aimCard.decrHp(hp);
			record.addRecord(aimCard.getIndex());
			record.addRecord(hp);
			if(die)
			{
				record.addRecord(1);
				super.addDieIndex(aimCard.getIndex());
			}
			else
			{
				record.addRecord(-1);
				record.addRecord(-1);//不掉东西
			}
			System.err.println("晕眩技能，照成伤害对象==="+aimCard.getName()+"血量损失 ==="+hp+", 剩余血量 ==="+aimCard.getCurHp());
		}
		return super.getDieIndex();
	}
	
	@Override
	public int buffValue(BattleCard aimCard) {
		if(round > 0)
		{
			round --;
			if(round == 0)
				aimCard.setDeSkill(null);
			System.err.println("晕眩状态，剩余回合数 ==="+round);
		}
		return 0;
	}
}

package com.cambrian.dfhm.skill;

import java.util.ArrayList;

import com.cambrian.dfhm.battle.BattleCard;
import com.cambrian.dfhm.battle.BattleRecord;

/**
 * 类说明：治疗技能
 * @author：Sebastian
 * 
 */
public class TreatSkill extends Skill{

	/* static fields */

	/* static methods */

	/* fields */

	/* constructors */

	/* properties */

	/* init start */

	/* methods */
	@Override
	public ArrayList<Integer> skillValue(BattleCard attCard, ArrayList<Integer> aim, BattleCard[] aimList, BattleRecord record) {
		int hp = super.getSkillHurt(attCard.getAtt());
		record.addRecord(hp);
		BattleCard aimCard;
		int index;
		for (int i = 0; i < aim.size(); i++) {
			index = aim.get(i);
			aimCard = aimList[index];
			aimCard.incrHp(hp);
			record.addRecord(aimCard.getIndex());
			record.addRecord(hp);
			record.addRecord(-1);
			System.err.println("治疗技能，照成作用对象==="+aimCard.getName()+"血量增加 ==="+hp+", 剩余血量 ==="+aimCard.getCurHp());
		}
		return super.getDieIndex();
	}
}

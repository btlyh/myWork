public class NormalSkill extends Skill{

	/* static fields */

	/* static methods */

	/* fields */

	/* constructors */

	/* properties */

	/* init start */

	/* methods */
	@Override
	public ArrayList<Integer> skillValue(BattleCard attCard, ArrayList<Integer> aim, BattleCard[] aimList, BattleRecord record)
	{
		super.clearDieIndex();
		int hp = super.getSkillHurt(attCard.getAtt());
		record.setAttMax(hp);
		BattleCard aimCard;
		boolean die = false;
		int index;
		for (int i = 0; i < aim.size(); i++) {
			index = aim.get(i);
			aimCard = aimList[index];
			die = aimCard.decrHp(hp);
			record.addRecord(aimCard.getIndex());
			record.addRecord(hp);
			if(die)
			{
				record.addRecord(1);
				super.addDieIndex(aimCard.getIndex());
			}
			else
			{
				record.addRecord(-1);
				record.addRecord(-1);//不掉东西
			}
			System.err.println("普通技能，照成伤害对象==="+aimCard.getName()+"血量损失 ==="+hp+", 剩余血量 ==="+aimCard.getCurHp());
		}			
		return super.getDieIndex();
	}
}

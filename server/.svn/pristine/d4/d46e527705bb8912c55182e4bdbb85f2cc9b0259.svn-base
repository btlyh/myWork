package com.cambrian.dfhm.skill;

import java.util.ArrayList;

import com.cambrian.common.net.ByteBuffer;
import com.cambrian.dfhm.battle.BattleCard;

/**
 * 类说明：晕眩技能
 * @author：Sebastian
 * 
 */
public class DizzySkill extends Skill{

	/* static fields */

	/* static methods */

	/* fields */
	private int round;
	/** 技能发动率 */
	private int rate;		

	/* constructors */

	/* properties */

	/* init start */

	/* methods */
	@Override
	public boolean skillValue(BattleCard attCard, int[] aim, BattleCard[] aimList, ArrayList<Integer> record) {
		int hurt = super.getSkillHurt(attCard);
		BattleCard aimCard;
		boolean die = false;
		for (int i = 0; i < aim.length; i++) {
			aimCard = aimList[aim[i]];
			die = aimCard.decrHp(hurt);
			record.add(aimCard.getIndex());
			record.add(hurt);
			if(die)
				record.add(1);
			else
				record.add(-1);
			System.err.println("晕眩技能，照成伤害对象==="+aimCard.getName()+"血量损失 ==="+hurt+", 剩余血量 ==="+aimCard.getCurHp());
		}
		return die;
	}
	
	@Override
	public boolean buffValue(BattleCard aimCard) {
		round --;
		System.err.println("晕眩状态，剩余回合数 ==="+round);
		return false;
	}
	
	@Override
	public void bytesWrite(ByteBuffer data) {
		data.writeInt(round);
	}
}
